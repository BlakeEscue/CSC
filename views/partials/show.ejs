<div class="container"> 
            <div class="row row-no-padding">   
                <div class="col-lg-12">
                   <h3 class="text-center"><%= customer.name %></h3>     
                   <div class="delete-button text-center">
                    <form action="/customer/<%= customer._id %>?_method=DELETE" method="POST" class="delete-form" id="delete_cust_button">
                      <button type="button" class="btn btn-xs btn-danger" data-toggle="modal" data-target="#myModal" >DELETE</button>
                    </form>
                  </div>
                  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                    <div class="modal-dialog" role="document">
                      <div class="modal-content">
                        <div class="modal-header">
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                          <h4 class="modal-title" id="myModalLabel">Delete Customer</h4>
                        </div>
                        <div class="modal-body">
                                Are you sure you want to delete <b><%= customer.name %></b>?
                        </div>
                        <div class="modal-footer sticky">
                          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                          <button type="button" onclick="delete_cust_button()" class="btn btn-primary" form="modal-details" >Delete</button>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>     
            </div>
           <div class="btn-group btn-group-justified" role="group">  
                  <div class="btn-group" role="group">
            <div class="row row-no-padding">  
                  
             <div class="col-md-3">
                   
                                  
                                  <button class="btn btn-default btn-lg dropdown-toggle" role="button" data-toggle="dropdown"> Search Customers   
                                              <span class="caret"></span>  
                                        </button>
                                        <ul class="dropdown-menu dropdown-menu-wide pre-scrollable">       
                                              <input class="form-control" id="myInput" type="text" placeholder="Search..">
                                         <% newCustomer.forEach(function(customer){ %>   
                                          <li><a href="/customers/<%= customer._id %>"><%= customer.name %></a></li>
                                         <% }); %> 
                                       </ul>
                                       
                                  </div>
                                   
                      
                      <div class="col-md-3">
                              
                             <a href="/customers/<%= customer._id %>/network" class="btn btn-primary btn-lg" role="button">Network Files</a>
                              
                        </div>     
                      <div class="col-md-3">
                              
                             <a href="/customers/<%= customer._id %>/email" class="btn btn-primary btn-lg" role="button">Email Files</a>
                      
                    </div>     
                      <div class="col-md-3">
                              
                             <a href="/customers/<%= customer._id %>/password" class="btn btn-primary btn-lg" role="button">Password Files</a>
                       
                        </div> 
                   </div>
                        
            </div> 
            <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
              <div class="modal-dialog" role="document">
                <div class="modal-content">
                  <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Delete</h4>
                  </div>
                  <div class="modal-body">
                          Are you sure you want to save changes?
                  </div>
                  <div class="modal-footer sticky">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" onclick="delete_cust_button()" class="btn btn-primary" form="modal-details" >Delete</button>
                  </div>
                </div>
              </div>
            </div>
           </div> 
           </div>
           
    